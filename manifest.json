{
    "manifest_version": 3,
    "name": "IRoar Premium",
    "version": "1.0",
    "description": "Shows Rate My Professors and grade distribution data for Clemson University professors.",
    "permissions": [
        "activeTab",
        "storage"
    ],
    "host_permissions": [
        "https://www.ratemyprofessors.com/*",
        "https://regssb.sis.clemson.edu/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "icons": {
        "16": "icons/icon.png",
        "48": "icons/icon.png",
        "96": "icons/icon.png",
        "128": "icons/icon.png"
    },
    "content_scripts": [
        {
            "matches": ["https://regssb.sis.clemson.edu/StudentRegistrationSsb/ssb/*"],
            "js": ["content.js"]
        }
    ],
    "web_accessible_resources": [
        {
          "resources": ["styles.css", "grade_distributions_final/*.csv"],
          "matches": ["<all_urls>"]
        }
    ]
}
